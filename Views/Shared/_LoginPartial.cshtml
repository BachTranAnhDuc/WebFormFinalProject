@using Microsoft.AspNetCore.Identity
@using Midterm_Project_ASP_MVC.Areas.Identity.Data

@inject SignInManager<Midterm_Project_ASP_MVCUser> SignInManager
@inject UserManager<Midterm_Project_ASP_MVCUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark font-italic" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark my-auto">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </form>
        </li>
    }
</ul>
