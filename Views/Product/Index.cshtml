@model IEnumerable<Midterm_Project_ASP_MVC.Models.prdRubik>

@{
    ViewData["Title"] = "Index";
}


<div class="container mt-5">
    <div class="card-columns">
        @foreach (var product in Model)
        {
            <div class="card">
                <div class="card-img-top h-75">
                    <img class="img-thumbnail img-prd" src="@product.img" />
                </div>
                <div class="card-body text-center">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                        <h5 class="card-title">@product.Title</h5>
                    </a>
                    <div>
                        <h4 class="font-weight-bold">@product.Ratings $</h4>
                        <a asp-controller="Product" asp-action="addCart" asp-route-id="@product.Id" class="btn btn-danger my-2">
                            <i class="fas fa-shopping-cart"></i> Add to Cart
                        </a>
                    </div>
                    <div>
                        <i class="fas fa-star star"></i>
                        <i class="fas fa-star star"></i>
                        <i class="fas fa-star star"></i>
                        <i class="fas fa-star star"></i>
                        <i class="fas fa-star star"></i>
                    </div>
                </div>
                <div class="card-footer"></div>
            </div>
         }
    </div>
</div>